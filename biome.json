{
    "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
    "vcs": {
        "enabled": true,
        "clientKind": "git",
        "useIgnoreFile": true
    },
    "files": {
        "includes": [
            "src/**/*.css",
            "src/**/*.js",
            "src/**/*.ts",
            "test/e2e/**/*.ts"
        ]
    },
    "formatter": {
        "indentStyle": "space"
    },
    "json": {
        "formatter": {
            "indentWidth": 4
        }
    }
}
